<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Form View -->
    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <!-- To add status bar -->
                <!-- # this will make the statusBar clickable #
                       options="{'clickable': '1'}"
                -->
                <header>
                    <!-- buttons to control statusBar states -->
                    <!-- draft, in_consultation, done, cancelled -->
                    <button type="object"
                            name="action_draft"
                            string="Mark as draft"
                            class="oe_highlight"
                            states="cancelled"
                    />
                    <button type="object"
                            name="action_in_consultation"
                            string="In Consultation"
                            class="oe_highlight"
                            states="draft"
                            data-hotkey="y"
                    />
                    <button type="object"
                            name="action_done"
                            string="Mark as Done"
                            class="oe_highlight"
                            states="in_consultation"
                    />
                    <button type="object"
                            name="action_cancel"
                            string="Cancel"
                            states="draft, in_consultation"
                            data-hotkey="z"
                    />
                    <!-- Status Bar -->
                    <field name="state"
                           widget="statusbar"
                           nolabel="1"
                           statusbar_visible="draft,in_consultation,done"
                    />
                </header>

                <sheet>
                    <field name="image"
                           widget="image"
                           class="oe_avatar"
                    />
                    <!-- Add a priority widget -->
                    <div>
                        <h2>
                            <field name="priority" widget="priority"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="ref"/>
                            <field name="gender"/>
                            <field name="doctor_id" widget="many2one_avatar"/>
                            <field name="booking_date"
                                   help="helptext is coming from xml definition"
                                   default_focus="1"
                            />
                        </group>
                        <group>
                            <field name="appointment_datetime"/>
                            <field name="hide_sales_price"
                                   groups="base.group_no_one"
                            />
                            <!-- func_test is searched in the appointment.py model -->
                            <button name="func_test"
                                    string="Object Button"
                                    type="object"
                                    class="oe_highlight"
                                    confirm="Are you sure to execute python code?"
                                    help="A message will be printed in the log"
                                    groups="base.group_no_one"
                            />
                            <!-- this window action is called when button is pressed -->
                            <button type="action"
                                    name="%(om_hospital.action_hospital_patient)d"
                                    string="Action button"
                                    class="oe_highlight"
                                    confirm="Are you sure to open the patient action"
                                    help="on clicking this button, you will be redirected to patient records"
                                    groups="base.group_no_one"
                            />
                        </group>
                        <group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Prescription" name="prescription">
                            <field name="prescription"
                                   placeholder="Enter your prescription"
                                   options="{ 'collaborative': true, 'resizable': true, 'codeview': true }"
                            />
                        </page>
                        <page string="Pharmacy" name="pharmacy">
                            <field name="pharmacy_line_ids">
                                <form>
                                    <group>
                                        <field name="product_id"/>
                                        <field name="qty"/>
                                        <field name="price_unit"
                                               attrs="{ 'column_invisible': [('parent.hide_sales_price', '=', True)] }"
                                        />
                                    </group>
                                </form>
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="qty"/>
                                    <field name="price_unit"
                                           attrs="{ 'column_invisible': [('parent.hide_sales_price', '=', True)] }"
                                    />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <!-- Add Chatter-->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree decoration-warning="state == 'in_consultation'"
                  decoration-success="state == 'done'"
                  decoration-danger="state == 'cancelled'"
                  sample="1"
                  multi_edit="1"
            >
                <field name="ref"/>
                <field name="patient_id"/>
                <field name="appointment_datetime"/>
                <field name="gender" optional="hide"/>
                <field name="doctor_id" widget="many2one_avatar_user"/>
                <!-- inherited activity_ids field from mail.thread -->
                <field name="activity_ids" widget="list_activity"/>
                <field name="booking_date" optional="show"/>
                <!-- colored badges in the list view -->
                <field name="state"
                       widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'in_consultation'"
                       decoration-success="state == 'done'"
                       decoration-danger="state == 'cancelled'"
                />
            </tree>
        </field>
    </record>

    <!-- Activity View -->
    <record id="view_hospital_appointment_activity" model="ir.ui.view">
        <field name="name">hospital.appointment.activity</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <activity string="Appointments">
                <field name="patient_id"/>
                <field name="ref"/>
                <templates>
                    <div t-name="activity-box">
                        <img t-att-src="activity_image('hospital.patient', 'image', record.patient_id.raw_value)" role="img" t-att-title="record.patient_id.value" t-att-alt="record.patient_id.value"/>
                        <div>
                            <field name="ref" display="full" />
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>

            </search>
        </field>
    </record>

    <!-- Appointment Sub-menu Action -->
    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form,activity</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Appointment Patient !
            </p>
        </field>
    </record>

    <!-- Appointment sub-menuitem of Appointments menu -->
    <menuitem
            id="menu_appointment"
            name="Appointments"
            sequence="10"
            parent="menu_appointment_main"
            action="action_hospital_appointment"
    />

</odoo>
