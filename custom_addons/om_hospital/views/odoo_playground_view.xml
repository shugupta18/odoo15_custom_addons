<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Form View -->
    <record id="view_odoo_playground_form" model="ir.ui.view">
        <field name="name">odoo.playground.form</field>
        <field name="model">odoo.playground</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="model_id"/>
                    <field name="code" widget="ace" options="{ 'mode': 'python' }"/>
                </group>
                <group>
                    <button type="object" name="action_execute" string="Execute"
                            class="fa fa-check oe_highlight" data-hotkey="q"/>
                    <button type="object" name="action_clear" string="Clear"
                            class="fa fa-refresh" data-hotkey="c"/>
                </group>
                <group>
                    <field name="result" readonly="1"/>
                </group>
                <group>
                    <div style="margin-top: 4px;">
                        <h3>Help</h3>
                        <p>Various available functions and variables available in odoo environment:</p>
                        <ul>
                            <li><code>self</code>: Current Object on which the action is triggered</li>
                            <li><code>env</code>: Odoo Environment on which the action is triggered</li>
                        </ul>
                    </div>
                </group>
                <footer>
                </footer>
            </form>
        </field>
    </record>

    <!-- Sub-menu Action -->
    <record id="action_playground" model="ir.actions.act_window">
        <field name="name">Play Ground</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">odoo.playground</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <!-- Sub-menu menuitem -->
    <menuitem id="menu_technical_main" name="Technical" sequence="40" parent="menu_hospital_main">
        <menuitem id="menu_playground" name="Play Ground" action="action_playground" sequence="100"/>
    </menuitem>

</odoo>
